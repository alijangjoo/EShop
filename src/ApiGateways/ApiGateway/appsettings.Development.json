{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Debug"
    }
  },
  "ApiSettings": {
    "IdentityApiUrl": "http://identity-api:80",
    "ProductApiUrl": "http://product-api:80",
    "OrderApiUrl": "http://order-api:80",
    "PaymentApiUrl": "http://payment-api:80",
    "NotificationApiUrl": "http://notification-api:80"
  },
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },
  "SwaggerSettings": {
    "EnableSwagger": true,
    "ShowDetailedErrors": true
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "*"
    ]
  },
  "RateLimitSettings": {
    "EnableRateLimiting": false
  },
  "HealthChecks": {
    "EnableHealthChecks": true,
    "DetailedHealthChecks": true
  }
}