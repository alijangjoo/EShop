      "ClientIdHeader": "X-ClientId"
    },
    "QoSOptions": {
      "ExceptionsAllowedBeforeBreaking": 3,
      "DurationOfBreak": 5000,
      "TimeoutValue": 30000
    },
    "LoadBalancerOptions": {
      "Type": "RoundRobin"
    }
  }
